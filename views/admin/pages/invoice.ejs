<%- contentFor('HeaderCss') %>

	<%- contentFor('body') %>
		<div class="container-fluid px-4">
			<!-- Page Heading -->
			<div class="d-flex align-items-center mb-4 mb-md-5">
				<h1 class="h3 mb-0 text-gray-800 fw-bold">List of Invoices</h1>
			</div>
			<!-- Content Row -->
			<div class="row dashboard-card">
				<div class="col-xl-4 col-md-6 mb-4 mb-md-5">
					<div class="card border-left-info rounded-4 h-100">
						<div class="card-body">
							<div class="row no-gutters align-items-center h-100">
								<div class="col-auto">
									<div
										class="icon-lg bg-gradient-dark shadow-dark border-radius-xl mx-sm-2 card-icon text-white">
										<i class="fa fa-inr"></i>
									</div>
								</div>
								<div class="col me-2">
									<p class="fs-sm-5 mb-0">Invoiced Amount</p>
									<p class="fs-3 mb-0 fw-bold mb-0" id="invoicedAmount">0</p>
								</div>
							</div>
							<hr>
						</div>
					</div>
				</div>

				<div class="col-xl-4 col-md-6 mb-4 mb-md-5">
					<div class="card border-left-info rounded-4 h-100">
						<div class="card-body">
							<div class="row no-gutters align-items-center h-100">
								<div class="col-auto">
									<div
										class="icon-lg bg-gradient-dark shadow-dark border-radius-xl mx-sm-2 card-icon text-white">
										<i class="fas fa-user"></i>
									</div>
								</div>
								<div class="col me-2">
									<p class="fs-sm-5 mb-0">Tax Amount</p>
									<p class="fs-3 mb-0 fw-bold mb-0" id="taxAmount">0</p>
								</div>
							</div>
							<hr>
						</div>
					</div>
				</div>
			</div>


			<div class="row">
				<div class="col-12">
					<div class="card user-table">
						<div class="card-body">
							<table id="documents_table" class="table table-bordered table-striped">
								<thead>
									<tr>
										<td>Id</td>
										<td>Number</td>
										<td>Company Name</td>
										<td>Invoice Amount</td>
										<td>Invoice Tax</td>
										<!-- <td>createdAt</td> -->
										<td>Action</td>
										<td>Payment Status</td>
									</tr>
								</thead>
								<tbody></tbody>
							</table>
						</div>
					</div>
				</div>
			</div>
		</div>

		<div class="modal fade blog-wrape" id="addUpdateDocumentModal" tabindex="-1"
			aria-labelledby="addUpdateDocumentModalLabel" aria-hidden="true" data-action="add">
			<div class="modal-dialog modal-lg" role="document">
				<div class="modal-content">
					<div class="modal-header bg-light">
						<h5 class="modal-title" id="adddocumentModalLongLabel">Add New Company</h5>
						<button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
					</div>
					<form id="addDocumentsForm" class="form-horizontal" data-action="add">
						<input type="hidden" name="_id" id="_id">
						<div class="modal-body">
							<div class="card-body">
								<div class="row form-group">
									<label for="company_name" class="col-sm-4 col-form-label">Company Name</label>
									<div class="col-sm-8">
										<input type="text" name="company_name" id="company_name" class="form-control"
											placeholder="Please enter company name">
									</div>
								</div>
								<div class="row form-group">
									<label for="company_gst_number" class="col-sm-4 col-form-label">GST Number</label>
									<div class="col-sm-8">
										<input type="text" name="company_gst_number" id="company_gst_number"
											class="form-control" placeholder="Please enter company GST">
									</div>
								</div>
								<div class="row form-group">
									<label for="company_email" class="col-sm-4 col-form-label">Company Email</label>
									<div class="col-sm-8">
										<input type="text" name="company_email" id="company_email" class="form-control"
											placeholder="Please enter company email">
									</div>
								</div>
								<div class="row form-group">
									<label for="company_address1" class="col-sm-4 col-form-label">Company
										Address1</label>
									<div class="col-sm-8">
										<input type="text" name="company_address1" id="company_address1"
											class="form-control" placeholder="Please enter company address1">
									</div>
								</div>
								<div class="row form-group">
									<label for="company_address2" class="col-sm-4 col-form-label">Company
										Address2</label>
									<div class="col-sm-8">
										<input type="text" name="company_address2" id="company_address2"
											class="form-control" placeholder="Please enter company address2">
									</div>
								</div>
								<div class="row form-group">
									<label for="company_city" class="col-sm-4 col-form-label">Company City</label>
									<div class="col-sm-8">
										<input type="text" name="company_city" id="company_city" class="form-control"
											placeholder="Please enter company city">
									</div>
								</div>
								<div class="row form-group">
									<label for="company_zip" class="col-sm-4 col-form-label">Company Zip</label>
									<div class="col-sm-8">
										<input type="text" name="company_zip" id="company_zip" class="form-control"
											placeholder="Please enter company zipCode">
									</div>
								</div>
								<div class="row form-group">
									<label for="company_number" class="col-sm-4 col-form-label">Company Number</label>
									<div class="col-sm-8">
										<input type="number" name="company_number" id="company_number"
											class="form-control" placeholder="Please enter company number">
									</div>
								</div>
							</div>
						</div>
						<div class="modal-footer">
							<button class="btn btn-secondary rounded-6" type="button"
								data-bs-dismiss="modal">Close</button>
							<button id="documentAddBtn" type="submit" class="btn btn-success rounded-6">Add</button>
						</div>
					</form>
				</div>
			</div>
		</div>

		<script src="/plugins/tinymce/js/tinymce/tinymce.min.js"></script>
		<%- contentFor('FooterJs') %>

			<script>
				$("#addDocumentShowModalBtn").on('click', function () {
					openDocumentModal('add', null);
				});


				$(document).on('click', '#editDocumentBtn', function () {
					const _id = $(this).data('id');
					$.ajax({
						url: `/admin/company/${_id}`,
						method: "GET",
						success: function (result) {
							if (result.success == true) {
								openDocumentModal('update', result.data);
							} else {
								toastr.error(result.message);
							}
						},
						error: function (err) {
							toastr.error(err.responseJSON?.message || "something went wrong.");
						}
					});
				});

				function openDocumentModal(action, data = null) {
					const modalTitle = action === 'add' ? 'Add New Product' : 'Update Product';
					$("#adddocumentModalLongLabel").text(modalTitle);
					$("#documentAddBtn").text(action === 'add' ? "Add" : "Update");
					$("#addDocumentsForm").data("action", action);
					$("#addDocumentsForm")[0].reset();
					if (action === 'update' && data) {
						for (var key in data) {
							if (key === 'company_number') {
								// Set the value as a number for company_number input
								$("[type='number'][name='" + key + "']").val(parseFloat(data[key]));
							} else {
								$("[type='text'][name='" + key + "']").val(data[key]);
							}
						}
						$("#_id").val(data._id);
					}
					$("#addUpdateDocumentModal").modal('show');
				}
				let companyDataTable = $("#documents_table").DataTable({
					lengthMenu: [
						[10, 25, 50, -1],
						[10, 25, 50, "All"]
					],
					iDisplayLength: 10,
					bDestroy: true,
					dom: 'lfrtip',
					autoWidth: false,
					scrollX: true,
					processing: true,
					bSort: false,
					serverSide: true,
					language: {
						"loadingRecords": "&nbsp;",
						"processing": "Loading..."
					},
					serverMethod: 'POST',
					ajax: {
						"url": "/admin/invoice/find"
					},
					columns: [{
						data: "",
						defaultContent: "-"
					}, {
						data: null,
						defaultContent: "-",
						render: function (data, type, row, meta) {
							// Assuming 'from_number' is the column containing the PDF filename
							var pdfFileName = row.from_number + "_pdf.pdf";

							// Construct the relative path to the PDF file
							var pdfPath = "/uploads/pdf/" + pdfFileName;

							// Generate a link with the PDF path and display 'from_number' as the link text
							var linkHtml = '<a href="' + pdfPath + '" target="_blank">' + row.from_number + '</a>';

							return linkHtml;
						}
					}, {
						data: null,
						defaultContent: "-",
						render: function (data) {
							return data.company_name;
						}
					}, {
						data: null,
						defaultContent: "-",
						render: function (data) {
							return data.invoice_total;
						}
					}, {
						data: null,
						defaultContent: "-",
						render: function (data) {
							return data.total_tax;
						}
					},
					// {
					// 	data: null,
					// 	defaultContent: "-",
					// 	render: function (data) {
					// 		return data.createdAt;
					// 	}
					// },
					{
						data: null,
						defaultContent: "-",
						render: function (data, type, row, meta) {
							var editHTML = '<center>';
							editHTML += `<div id= 'payment_status' className='form-check'>
								<button type="button" id = "paymentStatusPaid" class="btn btn-success btn-sm" value="Paid" data-id="${data._id}">Paid</button>
								<button type="button" id = "paymentStatusUnpaid" class="btn btn-danger btn-sm" value="Unpaid" data-id="${data._id}">Unpaid</button>
                    </div>`;
							return editHTML;
						}
					},
					{
						data: null,
						defaultContent: "-",
						render: function (data, type, row, meta) {
							var editHTML = '<center>';
							if (row.payment_status === "Paid") {
								editHTML += `<span class="badge rounded-pill bg-success">Done</span>`;
							} else {
								editHTML += `<span class="badge rounded-pill bg-danger">Unpaid</span>`;
							}
							return editHTML;
						}
					}
					],
					fnRowCallback: function (nRow, aData, iDisplayIndex) {
						var oSettings = companyDataTable.settings()[0];
						$("td:first", nRow).html(oSettings._iDisplayStart + iDisplayIndex + 1);
						nRow.id = aData.id;
						return nRow;
					},
				});

				$("#addDocumentsForm").submit(function (e) {
					e.preventDefault();
					const formData = $(this).serializeArray();
					const sendingData = {};
					formData.forEach(function (field) {
						sendingData[field.name] = field.value;
					});
					const action = $("#addDocumentsForm").data("action");
					let url = "/admin/company/";
					if (action == "add") {
						url = url + "create";
						delete sendingData._id;
					} else {
						url = url + "update";
					}

					$.ajax({
						url: url,
						method: "POST",
						data: sendingData,
						success: function (result) {
							if (result.success == true) {
								$("#addUpdateDocumentModal").modal('hide');
								companyDataTable.ajax.reload(null, false);
							} else {
								toastr.error(result.message);
							}
						},
						error: function (err) {
							toastr.error(err.responseJSON?.message || "something went wrong.");
						}
					});

				});

				$(document).on('click', 'table #deleteDocumentBtn', function () {
					var _id = $(this).data('id');
					Swal.fire({
						title: 'Are you sure?',
						text: "You won't be able to revert this!",
						icon: 'warning',
						showCancelButton: true,
						confirmButtonColor: '#3085d6',
						cancelButtonColor: '#d33',
						confirmButtonText: 'Yes, delete it!'
					}).then((result) => {
						if (result.isConfirmed) {
							$.ajax({
								url: '/admin/company/delete/' + _id,
								method: 'DELETE',
								success: function (response) {
									Swal.fire("Deleted!", "Your document has been deleted.", "success")
										.then(function () {
											companyDataTable.ajax.reload(null, false);
										});
								},
								error: function (xhr) {
									toastr.error(xhr.responseJSON.message);
								}
							});
						}
					});
				});
				$.ajax({
					url: '/admin/adminInvoiceTotal',
					method: 'GET',
					success: function (data) {
						console.log(data);
						if (data && data.success && data.data && typeof data.data.totalSum === 'number') {
							$("#invoicedAmount").text(data.data.totalSum);
							$("#taxAmount").text(data.data.totalTax);
						} else {
							console.error('Invalid data structure or totalSum is not a number:', data);
						}
					},
					error: function (error) {
						console.error('Error fetching data:', error);
					}
				});
				$(document).on('click', 'table #paymentStatusUnpaid, table #paymentStatusPaid', function () {
					var paymentStatus = $(this).val();
					var id = $(this).data('id');

					var sendingData = {
						paymentStatus: paymentStatus,
						id: id
					}

					$.ajax({
						url: "/admin/invoice/paymentStatus",
						method: "POST",
						data: sendingData,
						success: function (result) {
							if (result.success == true) {
								toastr.success("Payment Status Updated");
								companyDataTable.ajax.reload(null, false);
							} else {
								toastr.error(result.message);
							}
						},
						error: function (err) {
							toastr.error(err.responseJSON?.message || "something went wrong.");
						}
					});
				});

			</script>